[Unit]
Description=Kubernetes Scheduler
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/opt/local_kube/kubernetes/current/bin/kube-scheduler \
  --authentication-kubeconfig=/opt/local_kube/kubernetes/etc/kube-scheduler.kubeconfig \
  --config=/opt/local_kube/kubernetes/etc/kube-scheduler.yaml \
  --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
